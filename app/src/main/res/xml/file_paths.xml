<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permite compartilhar PDFs do cache interno -->
    <cache-path
        name="shared_pdfs"
        path="." />

    <!-- Permite compartilhar PDFs da pasta interna 'files/reports' -->
    <files-path
        name="reports"
        path="reports" />

    <!-- Extra: cobre também arquivos diretamente em 'files/' -->
    <files-path
        name="internal_files"
        path="." />

    <!-- Extra: cobre caso o arquivo esteja em storage externo (compatível até Android 13) -->
    <external-files-path
        name="external_reports"
        path="reports" />

</paths>
